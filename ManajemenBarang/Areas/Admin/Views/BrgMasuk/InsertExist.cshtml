@model ManajemenBarang.Areas.Admin.Models.ListOptions
@{
    ViewBag.Title = "Barang Masuk";
}

<h2>Tambah Data Barang Masuk</h2>
<br />
<div class="row">
    <div class="col-md-12">
        <form method="post" action="@Url.Action("InsertExistAction", "BrgMasuk", new { Area = "Admin" })">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">

                <div class="form-group">
                    <label class="control-label">Nama Barang</label>
                    <select name="id_barang" class="form-control" required>
                        <option selected="selected" value="0">Pilih Barang</option>
                        @foreach (var itemB in Model.getBarang)
                        {
                            <option value="@itemB.id_barang">@itemB.nama_barang</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Tanggal</label>
                    <input name="tanggal_masuk" type="date" class="form-control" required autocomplete="off" />
                    
                </div>

                <div class="form-group">
                    <label class="control-label">Jumlah</label>
                    <input name="jum_barang_masuk" class="form-control" required autocomplete="off" />
                    
                </div>

                <div class="form-group">
                    <label class="control-label">Deskripsi</label>
                    <input name="deskripsi" class="form-control" required autocomplete="off" />
                    
                </div>

                <div class="form-group">
                    <label class="control-label">Nama Operator</label>
                    <select name="created_by" class="form-control" required>
                        <option selected="selected" value="0">Pilih Nama</option>
                        @foreach (var itemU in Model.getUser)
                        {
                            <option value="@itemU.id_user">@itemU.username</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Insert" class="btn btn-success" />
                    <input type="button" value="Back" class="btn btn-primary" onclick="location.href='@Url.Action("Index","Adminsite", new { Area = "Admin" })'" />

                </div>
            </div>

        </form>
    </div>
</div>

<script type="text/javascript">
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31
            && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

</script> 