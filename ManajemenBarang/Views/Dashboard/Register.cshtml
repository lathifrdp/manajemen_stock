      </select>
     </div> -->
                </div>
                <div class="col-md-6">                   

                    <div class="form-group">
                        <label class="control-label">Alamat</label>
                        <input name="alamat_supplier" type="text" class="form-control" required autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">No. Telp</label>
                        <input name="telp_supplier" type="text" class="form-control" required autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Register" class="btn btn-default" />
                    </div>
                    <div>
                        @Html.ActionLink("Kembali ke Awal", "Index")
                    </div>

                </div>
            </form>
        </div>
    </div>


